entrypoint = "main.py"
language = "python3"

# Run Flask directly (simpler for local dev)
run = "pip install -r requirements.txt && python3 -m flask --app main:app run --host=0.0.0.0 --port=10000"

modules = ["python-3.11"]

[env]
FLASK_ENV = "development"

[[ports]]
localPort = 10000
externalPort = 3000

[agent]
expertMode = true

[nix]
